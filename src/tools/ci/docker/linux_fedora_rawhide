FROM fedora:rawhide
RUN \
  yum -y update && \
  yum -y install \
  git \
  meson \
  perl \
  perl-IPC-Run \
  \
  bison \
  ccache \
  clang \
  flex \
  gcc \
  gettext \
  lz4 \
  ninja-build \
  \
  libicu-devel \
  libuuid-devel \
  libxml2-devel \
  libxslt-devel \
  llvm-devel \
  lz4-devel \
  pam-devel \
  python3-devel \
  readline-devel \
  systemd-devel \
  tcl-devel \
  \
  openldap-devel \
  openldap-servers \
  openldap-clients \
  \
  openssl \
  openssl-devel \
  \
  krb5-devel \
  krb5-server \
  krb5-server-ldap \
  krb5-workstation \
  \
  langpacks-en \
  glibc-langpack-en
RUN \
  # Meson tries to run typemap from /usr/share/perl5/vendor_perl/ExtUtils/typemap but typemap is
  # at /usr/share/perl5/ExtUtils/typemap path
  find /usr/share/perl5/ExtUtils -name typemap -exec ln -sf '{}' /usr/share/perl5/vendor_perl/ExtUtils/typemap ';'
ENV LANG=en_US.UTF-8
